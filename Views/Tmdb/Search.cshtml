@model TempoAndCinema.Dtos.TmdbSearchResponseDto

@{
    ViewData["Title"] = "Buscar Filmes";
}

<h2>Buscar Filmes</h2>

<form method="get" asp-controller="Tmdb" asp-action="Search">
    <input type="text" name="query" value="@Model?.Query" placeholder="Digite um filme..." />
    <button type="submit">Buscar</button>
</form>


@if (Model?.Results != null && Model.Results.Any())
{
    <h3>Resultados para "@Model.Query"</h3>

    <div class="row row-cols-1 row-cols-md-4 g-4 mt-2">

        @foreach (var movie in Model.Results)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    
                    @if (!string.IsNullOrEmpty(movie.Poster_Path))
                    {
                        <img class="card-img-top"
                             style="height: 250px; object-fit: cover; border-radius: 0.5rem;"
                             src="@($"https://image.tmdb.org/t/p/w500{movie.Poster_Path}")"
                             alt="@movie.Title" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                             style="height: 250px; border-radius: 0.5rem;">
                            Sem imagem
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            @movie.Release_Date
                        </p>
                    </div>
                    <a class="btn btn-primary mt-2"
                       asp-action="Details"
                       asp-route-id="@movie.Id">
                        Ver detalhes
                    </a>


                </div>
            </div>
        }

    </div>

    <div class="mt-4 d-flex justify-content-between align-items-center">
        @if (Model.Page > 1)
        {
            <a class="btn btn-outline-primary"
               asp-action="Search"
               asp-route-query="@Model.Query"
               asp-route-page="@(Model.Page - 1)">
                ← Anterior
            </a>
        }

        <span>Página @Model.Page de @Model.TotalPages</span>

        @if (Model.Page < Model.TotalPages)
        {
            <a class="btn btn-outline-primary"
               asp-action="Search"
               asp-route-query="@Model.Query"
               asp-route-page="@(Model.Page + 1)">
                Próxima →
            </a>
        }
    </div>
}