@model TempoAndCinema.Models.Filme

@{
    ViewData["Title"] = "Excluir Filme";
}

<div class="container mt-4">

    <h2 class="text-danger fw-bold">Excluir Filme</h2>
    <p class="text-muted">Tem certeza que deseja excluir este filme? Esta ação não pode ser desfeita.</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">

            <h3>@Model.Titulo</h3>
            <h5 class="text-muted">@Model.TituloOriginal</h5>

            <div class="row mt-3">
                <div class="col-md-3">
                    <img src="@Model.PosterPath" class="img-fluid rounded shadow" />
                </div>

                <div class="col-md-9">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Gênero:</strong> @Model.Genero</li>
                        <li class="list-group-item"><strong>Idioma:</strong> @Model.Lingua.ToUpper()</li>
                        <li class="list-group-item"><strong>Nota Média:</strong> @Model.NotaMedia</li>
                        <li class="list-group-item"><strong>Lançamento:</strong> @Model.DataLancamento?.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Duração:</strong> @Model.Duracao min</li>
                        <li class="list-group-item"><strong>Cidade Referência:</strong> @(Model.CidadeReferencia ?? "—")</li>
                        <li class="list-group-item"><strong>Latitude:</strong> @(Model.Latitude?.ToString() ?? "—")</li>
                        <li class="list-group-item"><strong>Longitude:</strong> @(Model.Longitude?.ToString() ?? "—")</li>
                        <li class="list-group-item"><strong>Data Criação:</strong> @Model.DataCriacao</li>
                        <li class="list-group-item"><strong>Última Atualização:</strong> @Model.DataAtualizacao</li>
                    </ul>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                <a class="btn btn-secondary" href="/Filmes/Details/@Model.Id">Cancelar</a>
            </form>

        </div>
    </div>
</div>
