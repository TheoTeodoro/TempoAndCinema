@model List<TempoAndCinema.Models.Filme>

@{
    ViewData["Title"] = "Catálogo Local";
}

<div class="container mt-4">

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success text-center">@ViewBag.Message</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">🎬 Catálogo Local</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Adicionar Filme
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Nenhum filme cadastrado ainda.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var f in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0 h-100">

                        <img class="card-img-top"
                             style="height: 360px; object-fit: cover;"
                             src="@f.PosterPath" />

                        <div class="card-body">
                            <h5 class="card-title">@f.Titulo</h5>
                            <p class="text-muted small">@f.TituloOriginal</p>

                            <a asp-action="Details" asp-route-id="@f.Id" 
                               class="btn btn-sm btn-outline-primary w-100">
                                Ver Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>