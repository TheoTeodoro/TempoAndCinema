@model TempoAndCinema.Models.Filme
@using TempoAndCinema.Dtos
@using System.Globalization;

@{
    ViewData["Title"] = "Detalhes";

    var elenco = ViewBag.ElencoCompleto as List<string> ?? new List<string>();
    var clima = ViewBag.Weather as WeatherDto;
    var imagens = ViewBag.Imagens as List<string> ?? new List<string>();
}

<style>
    body {
        background-color: #141414;
        color: #fff;
        font-family: "Netflix Sans", Arial, sans-serif;
    }

    h1, h2, h3, h4 {
        font-weight: 700;
    }

    .netflix-badge {
        background: #e50914;
        padding: 6px 10px;
        border-radius: 4px;
        font-weight: 600;
    }

    .btn-netflix {
        background: #e50914;
        border: none;
        padding: 10px 18px;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-netflix:hover {
        background: #b00610;
    }

    .btn-secondary-custom {
        background: #333;
        color: #fff;
        border: none;
        padding: 10px 18px;
        border-radius: 4px;
    }

    .btn-secondary-custom:hover {
        background: #444;
    }

    .poster-info-card {
        background: #1f1f1f;
        border: 1px solid #333;
    }

    .weather-card {
        background: #1f1f1f;
        border-left: 4px solid #e50914;
        padding: 15px;
    }

    .image-grid img {
        transition: transform 0.2s;
    }

    .image-grid img:hover {
        transform: scale(1.05);
    }

    .cast-list .list-group-item {
        background: #1f1f1f;
        border: 1px solid #333;
        color: #ddd;
    }
</style>

<div class="container py-4">

    <!-- BACKDROP PRINCIPAL -->
    @if (imagens.Any())
    {
        <div class="position-relative mb-4 rounded shadow overflow-hidden">
            <img src="@imagens.First()" class="img-fluid w-100" style="max-height:440px; object-fit:cover;" />

            <div class="position-absolute bottom-0 start-0 bg-dark bg-opacity-50 text-white p-4 rounded-end">
                <h1 class="fw-bold display-5">@Model.Titulo</h1>
                <p class="mb-0 fs-5">@Model.Genero • @Model.DataLancamento?.ToString("yyyy")</p>
            </div>
        </div>
    }

    <!-- BOTÕES -->
    <div class="d-flex justify-content-between mb-4">
        <a class="btn-secondary-custom" href="/Filmes">← Voltar</a>

        <div class="d-flex gap-2">
            <a class="btn-netflix" href="/Filmes/ExportCsv/@Model.Id">📄 Exportar CSV</a>
            <a href="/Filmes/Edit/@Model.Id" class="btn-secondary-custom">✏ Editar</a>
            <a href="/Filmes/Delete/@Model.Id" class="btn-secondary-custom">🗑 Deletar</a>
        </div>
    </div>

    <div class="row">
        <!-- POSTER + INFO -->
        <div class="col-md-3">

            <img src="@Model.PosterPath" class="img-fluid rounded shadow" alt="@Model.Titulo" />

            <ul class="list-group mt-4 shadow poster-info-card">
                <li class="list-group-item bg-dark text-white"><strong>Idioma:</strong> @Model.Lingua?.ToUpper()</li>
                <li class="list-group-item bg-dark text-white"><strong>Duração:</strong> @Model.Duracao min</li>
                <li class="list-group-item bg-dark text-white"><strong>Lançamento:</strong> @Model.DataLancamento?.ToString("dd/MM/yyyy")</li>
                <li class="list-group-item bg-dark text-white"><strong>Nota Média:</strong> @Model.NotaMedia</li>
                <li class="list-group-item bg-dark text-white"><strong>Lat:</strong> @Model.Latitude?.ToString(CultureInfo.InvariantCulture)</li>
                <li class="list-group-item bg-dark text-white"><strong>Long:</strong> @Model.Longitude?.ToString(CultureInfo.InvariantCulture)</li>
            </ul>

            <!-- CLIMA -->
            @if (clima != null)
            {
                <div class="weather-card mt-4 shadow-sm">
                    <h4 class="mb-1">🌤 Tempo em @Model.CidadeReferencia</h4>
                    <p class="text-muted">@clima.Daily.Time[0]</p>

                    <p>🌡 Máx: <strong>@clima.Daily.Temperature_2m_Max[0] °C</strong></p>
                    <p>❄ Min: <strong>@clima.Daily.Temperature_2m_Min[0] °C</strong></p>
                </div>
            }
        </div>

        <!-- DESCRIÇÃO / TRAILER / ELENCO -->
        <div class="col-md-9">

            <h1 class="fw-bold">@Model.Titulo</h1>
            <h5 class="text-muted">@Model.TituloOriginal</h5>

            <div class="mt-2 mb-3">
                <span class="netflix-badge fs-6">@Model.Genero</span>
                <span class="badge bg-warning text-dark fs-6">⭐ @Model.NotaMedia</span>
            </div>

            <h3 class="mt-4">Sinopse</h3>
            <p class="text-light">@Model.Sinopse</p>

            <!-- TRAILER -->
            @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {
                <h3 class="mt-5">🎬 Trailer</h3>
                <div class="ratio ratio-16x9 shadow rounded">
                    <iframe src="@Model.TrailerUrl" allowfullscreen></iframe>
                </div>
            }

            <!-- ELENCO -->
            <h3 class="mt-5">👥 Elenco</h3>

            @if (elenco.Any())
            {
                <ul class="list-group cast-list shadow-sm">
                    @foreach (var ator in elenco)
                    {
                        <li class="list-group-item">@ator</li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">Nenhum elenco registrado.</p>
            }

        </div>
    </div>

    <!-- GALERIA -->
    <h3 class="mt-5 mb-3">🖼 Galeria de Imagens</h3>

    @if (imagens.Any())
    {
        <div class="row g-3 image-grid">
            @foreach (var img in imagens.Take(15))
            {
                <div class="col-md-4">
                    <img src="@img" class="img-fluid rounded shadow" />
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Nenhuma imagem disponível.</p>
    }

</div>
