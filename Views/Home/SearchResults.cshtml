@model TempoAndCinema.Dtos.TmdbSearchResponseDto

<div class="container mt-4">
    <button class="btn btn-secondary mb-3" onclick="history.back()">← Voltar</button>

    <h2 class="section-title">Resultados para "@Model.Query"</h2>

    <div class="d-flex flex-wrap">
        @foreach (var filme in Model.Results)
        {
            <partial name="Partials/_MovieCard" model="filme" />
        }
    </div>
</div>

<style>
.section-title { color: #fff; font-weight: bold; margin-bottom: 10px; }
body { background-color: #111; color: #f5f5f5; }
</style>